<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activitys.Fragment.VsfriendsFragment">


    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/card1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardBackgroundColor="#004DB1"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24dp"
    android:text="Your Rank"
    android:fontFamily="@font/segoeuibold"
    android:textColor="#ffffff"
    android:layout_margin="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="1ST"
            android:fontFamily="@font/segoeuibold"
            android:textColor="#ffffff"
            android:layout_margin="24dp"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="This Week"
        android:fontFamily="@font/segoe_ui"
        android:textColor="#ffffff"
       android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>





    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/id1"
        android:layout_below="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fontFamily="@font/segoeuibold"
        android:textColor="@color/textcolor"
        android:text="Mon, 14 Dec - Sun, 20th Dec(IST)"
        android:textSize="14dp"/>




    <ListView
        android:layout_below="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/friends12"
        android:dividerHeight="2dp"
        android:divider="@android:color/transparent"
        android:layout_marginBottom="60dp"

        />



<androidx.cardview.widget.CardView

    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:id="@+id/rel_friends"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#004DB1"
  >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuibold"
        android:textColor="#ffffff"
        android:text="Invite Friend"
        android:textSize="14dp"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>


    <ImageView
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:elevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/vs1"/>

</RelativeLayout>