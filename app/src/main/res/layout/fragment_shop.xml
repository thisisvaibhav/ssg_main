                        android:background="#004DB1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_sleepsolution"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
