<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activitys.Understand_Step_CountingActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/back12"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back12" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/segoeuibold"
                    android:text="Understand step counting"
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />


            </LinearLayout>










            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#004DB1"
                android:text="Google Fit"
                android:fontFamily="@font/segoeuibold"
                android:textSize="25dp"
                android:layout_marginTop="20dp"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Keep the sticky notes on my phones main screen with the live step ticker"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_background_">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Got It"
                    android:textColor="@color/background"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="16dp"/>

            </RelativeLayout>











            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#004DB1"
                android:text="Your Phone"
                android:fontFamily="@font/segoeuibold"
                android:textSize="25dp"
                android:layout_marginTop="20dp"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Keep the sticky notes on my phones main screen with the live step ticker"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_background_">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Got It"
                    android:textColor="@color/background"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="16dp"/>

            </RelativeLayout>











        </LinearLayout>




</RelativeLayout>