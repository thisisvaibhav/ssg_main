<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Activitys.Getoffer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/back12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp" >


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/product_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Lorem Ipsum is simply dummy text
of the industry. $49"
                android:textColor="@color/textcolor"
                android:textSize="16dp" />


            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="Lorem Ipsum is simply dummy text of the printing and type-
setting industry. Lorem Ipsum has been the industry's
standard dummy text ever since the 1500s."
                android:textColor="#83000000"
                android:textSize="11dp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:textColor="@color/textcolor"
    android:text="Please Note"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/segoeuibold"/>



            <LinearLayout
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and type-
setting industry."
                    android:textColor="#63000000"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="12dp"/>


            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and type-
setting industry."
                    android:textColor="#63000000"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="12dp"/>


            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and type-
setting industry."
                    android:textColor="#63000000"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="12dp"/>


            </LinearLayout>





            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">



                <androidx.cardview.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:paddingTop="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/textcolor"
                            android:layout_centerInParent="true"
                            android:text="Instruction to purchase"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:paddingTop="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/textcolor"
                            android:layout_centerInParent="true"
                            android:text="Instruction to purchase"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>






   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="60dp"
       app:cardUseCompatPadding="true"
       app:cardCornerRadius="12dp"
       app:cardBackgroundColor="#004DB1"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="20dp"
       android:layout_marginRight="24dp"
       android:layout_marginLeft="24dp">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Get RS.100 off Discount Code"
               android:textColor="@color/background"
               android:fontFamily="@font/segoeuibold"
               android:textSize="14dp"
               android:layout_centerInParent="true"/>

